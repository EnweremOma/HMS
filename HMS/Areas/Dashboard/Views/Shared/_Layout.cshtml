<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - HMS</title>

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Areas/Dashboard/Content/Vendor/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Dashboard/Content/css/styles.css" rel="stylesheet" />
    <!-- Favicon-->
    <script src="https://kit.fontawesome.com/f9e77f8f92.js" crossorigin="anonymous"></script>


    <script src="~/Areas/Dashboard/Content/Vendor/jquery/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light"><i class="fa-solid fa-hotel m-1"></i> HMS</div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "AccomodationTypes")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fa-solid fa-building"></i> Accomodation Types
                </a>
                <a href="@Url.Action("Index", "AccomodationPackages")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fa-solid fa-cubes m-1"></i> Accomodation Packages
                </a>
                <a href="@Url.Action("Index", "Accomodations")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fa-solid fa-map-pin"></i> Accomodations
                </a>
                <a href="@Url.Action("Index", "Roles")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fa-solid fa-users-gear m-1"></i> Roles
                </a>
                <a href="@Url.Action("Index", "Users")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fa-solid fa-users m-1"></i> Users
                </a>
            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle"><i class="fa-solid fa-bars"></i></button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item active"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa-solid fa-right-from-bracket m-1"></i> Logout</a></li>

                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new {id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    }

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    
</body>
</html>
